<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="match_parent" 
	android:layout_height="match_parent" 
	android:overScrollMode="always" 
	android:isScrollContainer="true" 
	android:scrollbarAlwaysDrawVerticalTrack="true" 
	android:scrollbarStyle="outsideInset" 
	android:scrollbars="vertical">
        
    <LinearLayout 
        android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin">
	    
        <GridLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:columnCount="2"
		    android:rowCount="3"
		    android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingTop="@dimen/activity_vertical_margin">
		    
	        <TextView
	            android:id="@+id/iChallengesCompleted"
	            android:layout_width="172dp"
	            android:layout_height="wrap_content"
	            android:layout_gravity="left"
	            android:text="@string/challenges_completed" />
	        
	        <TextView
	            android:id="@+id/iChallengesCompletedValue"
	            android:layout_width="68dp"
	            android:layout_height="wrap_content"
	            android:layout_gravity="fill_horizontal"
	            android:text="Test" />

	    </GridLayout>
        
        <GridLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:columnCount="2"
		    android:rowCount="3"
		    android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingTop="@dimen/activity_vertical_margin" >
		    
            <TextView
                android:id="@+id/strGameName"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Test" />
            
            <TextView
                android:id="@+id/blank"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="" />
            
            <TextView
                android:id="@+id/iTotalPoints"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/total_points" />
            
            <TextView 
	            android:layout_width="130dp"
	            android:layout_height="wrap_content"
	            android:id="@+id/iTotalPointsValue"
	            android:text="Test"/>
            
            <TextView
                android:id="@+id/strGameDescription"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/description" />
            
            <TextView 
	            android:layout_width="130dp"
	            android:layout_height="wrap_content"
	            android:id="@+id/strGameDescriptionValue"
	            android:text="Test"/>
		
		</GridLayout>
		
        <GridLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:columnCount="2"
		    android:rowCount="2"
		    android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingTop="@dimen/activity_vertical_margin" >
            
            <TextView 
	            android:layout_width="130dp"
	            android:layout_height="wrap_content"
	            android:id="@+id/strGameName2"
	            android:text="Test"/>
            
            <TextView 
	            android:layout_width="130dp"
	            android:layout_height="wrap_content"
	            android:id="@+id/blank2"
	            android:text=""/>
            
            <TextView
                android:id="@+id/iTotalPoints2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/total_points" />
            
            <TextView 
	            android:layout_width="130dp"
	            android:layout_height="wrap_content"
	            android:id="@+id/iTotalPointsValue2"
	            android:text="Test"/>
            
            <TextView
                android:id="@+id/strGameDescription2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/description" />
            
            <TextView 
	            android:layout_width="130dp"
	            android:layout_height="wrap_content"
	            android:id="@+id/strGameDescriptionValue2"
	            android:text="Test"/>
		
		</GridLayout>
        
	</LinearLayout>
	
</ScrollView>
    


